# Database Configuration
DATABASE_URL=postgresql+asyncpg://battery_user:battery_pass@localhost:5432/battery_intelligence
POSTGRES_USER=battery_user
POSTGRES_PASSWORD=battery_pass
POSTGRES_DB=battery_intelligence
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application Settings
APP_NAME="US Battery Industry Intelligence Platform"
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# OpenAI Configuration (for RAG/embeddings)
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Anthropic Configuration (for LLM responses)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4096

# Cohere Configuration (alternative embeddings)
COHERE_API_KEY=your-cohere-api-key-here

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
VECTOR_SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10
ENABLE_RERANKING=True
CONVERSATION_MEMORY_LIMIT=10

# Citation Configuration
ENABLE_CITATIONS=True
MIN_CITATION_CONFIDENCE=0.7

# Logging
LOG_LEVEL=INFO
