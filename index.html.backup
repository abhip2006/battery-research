    <footer>
        <p>U.S. Battery Industry Intelligence Platform | Research compiled from 6 specialized agents analyzing 540+ sources</p>
        <p style="margin-top: 0.5rem; font-size: 0.875rem;">Data Quality Score: 78/100 | 73% Tier 1/2 Sources | Last Updated: November 2024</p>
    </footer>

    <script>
        // Load visualization data
        fetch('visualization-data.json')
            .then(response => response.json())
            .then(data => {
                // Cost Curve Chart
                const costCtx = document.getElementById('costChart').getContext('2d');
                new Chart(costCtx, {
                    type: 'line',
                    data: {
                        labels: data.costCurve.map(d => d.year),
                        datasets: [{
                            label: 'Battery Pack Cost ($/kWh)',
                            data: data.costCurve.map(d => d.cost),
                            borderColor: '#00C805',
                            backgroundColor: 'rgba(0, 200, 5, 0.1)',
                            tension: 0.4,
                            fill: true,
                            pointRadius: 5,
                            pointHoverRadius: 7
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                labels: { color: '#FFFFFF' }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { color: '#B3B3B3' },
                                grid: { color: '#3D3D3D' }
                            },
                            x: {
                                ticks: { color: '#B3B3B3' },
                                grid: { color: '#3D3D3D' }
                            }
                        }
                    }
                });

                // Capacity Growth Chart
                const capacityCtx = document.getElementById('capacityChart').getContext('2d');
                new Chart(capacityCtx, {
                    type: 'bar',
                    data: {
                        labels: data.capacityGrowth.map(d => d.year),
                        datasets: [{
                            label: 'U.S. Battery Capacity (GWh)',
                            data: data.capacityGrowth.map(d => d.capacity),
                            backgroundColor: 'rgba(0, 200, 5, 0.8)',
                            borderColor: '#00C805',
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                labels: { color: '#FFFFFF' }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { color: '#B3B3B3' },
                                grid: { color: '#3D3D3D' }
                            },
                            x: {
                                ticks: { color: '#B3B3B3' },
                                grid: { color: '#3D3D3D' }
                            }
                        }
                    }
                });
            })
            .catch(error => console.error('Error loading visualization data:', error));
    </script>
</body>
</html>